                        android:text="@string/msg02"
                        android:textColor="@color/red"
                        android:textSize="@dimen/common_little_textsize" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_label_height"
